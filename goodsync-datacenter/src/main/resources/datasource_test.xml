<?xml version="1.0" encoding="UTF-8"?>
<beans profile="!contain" xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
              <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
              <property name="url" value="jdbc:sqlserver://120.24.54.54:1433;DatabaseName=SWT_MicroManae_Test"/>
              <property name="username" value="devtemp"/>
              <property name="password" value="HuoTu@Cn123"/>
       </bean>

       <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
